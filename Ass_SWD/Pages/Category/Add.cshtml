@page "/Category/Add"
@model Ass_SWD.Pages.Category.AddModel
@{
    Layout = "_MainLayout";
}
<style>
    .container {
        max-width: 800px;
    }

    .card-header.bg-primary {
        background-color: #007bff !important;
    }

        .card-header.bg-primary h2 {
            font-weight: bold;
            text-transform: uppercase;
        }

    .form-group label {
        font-weight: bold;      
        text-transform: uppercase;
    }
    .form-group{
        margin: 20px;
    }

    .form-control {
        border: 1px solid #ced4da;
        border-radius: .25rem;
        padding: .375rem .75rem;
        font-size: 1rem;
        line-height: 1.5;
        color: #495057;
        background-color: #fff;
        background-clip: padding-box;
        transition: border-color .15s ease-in-out,box-shadow .15s ease-in-out;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 .2rem rgba(0,123,255,.25);
        }

    .btn-primary {
        color: #fff;
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            color: #fff;
            background-color: #0069d9;
            border-color: #0062cc;
        }
</style>



<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                @if (TempData.ContainsKey("message"))
                {
                    <h4 class="wrap-notification" style="color:red">@TempData["message"]</h4>
                }
                <div class="card-header bg-primary text-white">
                    <h2 class="text-center mb-0">Add New Category</h2>
                </div>
                <div class="card-body">
                    <form asp-page="/Category/Add">
                        <div class="form-group">
                            <label for="name">Category Name:</label>
                            <input type="text" class="form-control" id="name" name="Name">
                        </div>
                        <div class="form-group">
                            <label for="description">Description:</label>
                            <textarea class="form-control" id="description" name="Description" rows="5"></textarea>
                        </div>
                        <div class="form-group" style="text-align: center;">
                            <button type="submit" class="btn btn-primary">Add</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@if (TempData.ContainsKey("message"))
{
    <script>
        @*get element*@
                const notification = document.querySelector(".wrap-notification");

        @*add class*@
            notification.classList.add("active");

        @*remove class after 1s*@
            setTimeout(() => {
                notification.classList.remove("active");
            }, 1000);
    </script>
}