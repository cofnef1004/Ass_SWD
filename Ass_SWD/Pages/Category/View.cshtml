@page "/Category/View"
@model Ass_SWD.Pages.Category.ViewModel
@{
    Layout = "_MainLayout";
}

<style>
    .categories {
        display: flex;
        flex-wrap: wrap;
    }

        .categories ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .categories li {
            height: 100px;
            border: 1px solid #ccc;
            margin: 10px;
            padding: 10px;
            text-align: center;
            display: flex;
            justify-content: center;
            align-items: center;
        }

    .Category_1, .Category_4, .Category_7 {
        background-color: #FCF0CF;
    }

    .Category_2, .Category_5, .Category_8 {
        background-color: #94A2F2;
    }

    .Category_3, .Category_6, .Category_9 {
        background-color: #B6D6F2;
    }

    button {
        display: inline-block;
        width: 20%;
        padding: 10px 20px;
        background-color: #4CAF50;
        color: #fff;
        border: none;
        text-align: center;
        text-decoration: none;
        font-size: 16px;
        position: relative;
        overflow: hidden;
    }

        button::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            border: 2px solid #4CAF50;
            box-sizing: border-box;
            transition: transform 0.3s;
            transform: scale(0);
        }

        button:hover::before {
            transform: scale(1);
        }
</style>

<div class="categories">
    <div class="row" style=" width: 100%;">
        <h1 class="col-md-6">View All Category</h1>

        <button style="width:20%;" class="col-md-6" onclick="location.href='/Category/Add'"> Add New Category</button>
    </div>

    <ul class="row" style=" width: 100%;">
        @foreach (var category in Model.Categories)
        {
        <li class="Category_@category.CategoryId col-md-10">
            <a href="/Category/ViewDetail/@category.CategoryId">
                @category.CategoryName
            </a>
        </li>
        }
    </ul>
</div>
