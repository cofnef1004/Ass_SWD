@page
@model Add

@{
    Layout = "_MainLayout";
}

<!DOCTYPE html>

<html>
<head>
    <title></title>
</head>
<body>
<h1>Add fee for @Model.Record.Patient.FullName - ( @Model.Record.Diagnosis)</h1>
<div>
    <form asp-page="/Fee/Add" asp-page-handler="addFee">
        <input type="hidden" name="recordId" value="@Model.RecordId"/>
        <br/>Amount:<input type="number" name="amount"/>
        <br/>Method: <select name="method">
            <option value="Cash">Cash</option>
            <option value="Credit Card">Credit Card</option>
            <option value="Health Insurance">Health Insurance</option>
            <option value="Other">Other</option>
        </select>
        <br/> <input type="submit" value="Add"/>
    </form>
</div>
</body>
</html>